<h1>  Carga Productos</h1>

<form id="formCargarProductos">
    <label for="input_title"></label> <input id="input_title" name="title" type="text" placeholder="ingrese title">
    <br>
    <label for="input_description"></label> <input id="input_description" name="description" type="text"
        placeholder="ingrese description">
    <br>
    <label for="input_price"></label> <input id="input_price" name="price" type="text" placeholder="ingrese price">
    <br><label for="input_thumbnail"></label> <input id="input_thumbnail" name="thumbnail" type="text"
        placeholder="ingrese thumbnail">
    <br><label for="input_code"></label> <input id="input_code" name="code" type="text" placeholder="ingrese code">
    <br><label for="input_status"></label> <input id="input_status" name="status" type="text"
        placeholder="ingrese status">
    <br><label for="input_stock"></label> <input id="input_stock" name="stock" type="text" placeholder="ingrese stock">
    <br><label for="input_categoria"></label> <input id="input_categoria" name="categoria" type="text"
        placeholder="ingrese categoria">
    <br>

    <button type="submit">GUARDAR</button>
</form>




<h1>Muestra Productos</h1>

{{#if hayProductos}}
<ul>
    {{#each productos}}

    <li>title: {{this.title}}  | description : {{this.description}} | price : {{this.price}}| thumbnail :
        {{this.thumbnail}}| code : {{this.code}}| status : {{this.status}}| stock : {{this.stock}}| categoria :
        {{this.categoria}}| ID : {{this._id}} <br> <br></li>
    {{/each}}
</ul>
{{else}}

<p>no hay productos juegos para mostrar</p>
{{/if}}


<h1>Muestra Carros</h1>

{{#if hayCarros}}
<ul>
    {{#each carros}}

    <li>ID Carro : {{this._id}} | Productos: {{this.products.product}}  |  <br> <br></li>
    {{/each}}
</ul>
{{else}}

<p>no hay carros juegos para mostrar</p>
{{/if}}


<script src="js/cargaProductos.js"></script>